<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/petrona</item>
    </style>

    <style name="AppTitle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">100sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/alex_brush</item>
    </style>

    <style name="Button.Bottom">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="RegistrationFields">
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:padding">50dp</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/petrona</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TextViewNoteTitle">
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/petrona</item>
    </style>

    <style name="TextViewNoteDate">
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/petrona</item>
    </style>

    <style name="TextViewNoteDescription">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="fontFamily">@font/petrona</item>
    </style>

    <style name="ButtonTop">
        <item name="android:textColor">@color/grey</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:spinnersShown">true</item>
    </style>

    <style name="AddTitleEditText">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="AddDescriptionEditText">
        <item name="android:height">200dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="TextViewHeader.AddNote">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

</resources>